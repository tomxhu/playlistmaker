extends layout

block content
  p #{split}
  h1= title
  p Welcome to #{title}
  p the searched term was: #{query}
  //p data returned: #{response}

  each val, index in response
    block.song 
      p Title #{val.vtitle}
      p Link #{val.link}
      -if(val.type=='Youtube')
        img(src=val.thumb)

      p #{val.time}
      form(method='post')
        input(type='hidden', value=val.link, name='link')
        input(type='hidden', value=val.vtitle, name='vtitle')
        input(type='hidden', value=val.type, name='type')
        input(type='hidden', value=val.time.seconds, name='time')
        input(type='submit', value='This One')


